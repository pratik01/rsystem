.row
  .col-md-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title.pull-left R features
        .btn-group.pull-right
          %button.btn.btn-default.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
            Action
            %span.caret
          %ul.dropdown-menu
            %li
              %a{:href => "/restaurants/new"} Add R
            %li
              %a{:href => "/restaurant_features/new"} Add R Features
        .clearfix
      .panel-body
        %table.table.table-bordered.table-responsive
          %thead
            %tr
              %th R Name
              %th F Name
              %th Actions
          %tbody
            - @restaurant_features.each do |restaurant_feature|
              %tr
                %td= restaurant_feature.restaurant.name
                %td= restaurant_feature.name
                %td
                  %a.btn.btn-sm.btn-info{:href => "restaurant_features/#{restaurant_feature.id}"}
                    %i.glyphicon.glyphicon-move
                  %a.btn.btn-sm.btn-default{:href => "restaurant_features/#{restaurant_feature.id}/edit"}
                    %i.glyphicon.glyphicon-pencil
                  %a.btn.btn-sm.btn-danger{"data-confirm" => "Are you sure?", "data-method" => "delete", :href => "/restaurant_features/#{restaurant_feature.id}", :rel => "nofollow"}
                    %i.glyphicon.glyphicon-trash