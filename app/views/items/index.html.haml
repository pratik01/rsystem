.row
  .col-md-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title.pull-left Item
        .btn-group.pull-right
          %a{:href=>"/items/new"}
            %button.btn.btn-default.dropdown-toggle{:type=>"button"}
              New Item
        .clearfix
      .panel-body
        %table.table.table-bordered.table-responsive
          %thead
            %td Name
            %td Description
            %td Actions
          %tbody
            - @items.each do |item|
              %tr
                %td
                  = item.name
                %td
                  = item.description
                %td
                  %a.btn.btn-sm.btn-info{:href=>"/items/#{item.id}"}
                    %i.glyphicon.glyphicon-move
                  %a.btn.btn-sm.btn-default{:href=>"/items/#{item.id}/edit"}
                    %i.glyphicon.glyphicon-edit
                  %a.btn.btn-sm.btn-danger{:href=>"/items/#{item.id}","data-confirm"=>"Are you sure?", "data-method"=>"delete","rel"=>"nofollow"}
                    %i.glyphicon.glyphicon-trash