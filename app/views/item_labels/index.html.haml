.row
  .col-md-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title.pull-left Item Label
        .btn-group.pull-right
          %button.btn.btn-default.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
            Action
            %span.caret
          %ul.dropdown-menu
            %li
              %a{:href => "/item_labels/new"} Add Item Label
        .clearfix
      .panel-body
        %table.table.table-bordered.table-responsive
          %thead
            %tr
              %th Item
              %th Name
              %th Action
          %tbody
            - @item_labels.each do |item_label|
              %tr
                %td= item_label.item.name
                %td= item_label.name
                %td
                  %a.btn.btn-sm.btn-info{:href => "/item_labels/#{item_label.id}"}
                    %i.glyphicon.glyphicon-move
                  %a.btn.btn-sm.btn-default{:href => "/item_labels/#{item_label.id}/edit"}
                    %i.glyphicon.glyphicon-pencil
                  %a.btn.btn-sm.btn-danger{"data-confirm" => "Are you sure?", "data-method" => "delete", :href => "/item_labels/#{item_label.id}", :rel => "nofollow"}
                    %i.glyphicon.glyphicon-trash