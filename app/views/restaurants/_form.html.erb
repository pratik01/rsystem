<%= form_for(@restaurant) do |f| %>
  <% if @restaurant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@restaurant.errors.count, "error") %> prohibited this restaurant from being saved:</h2>

      <ul>
      <% @restaurant.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <div class="panel panel-default">
      <div class="panel-heading">R Infomation</div>
      <div class="panel-body">
        <div class="col-md-12">
            <div class="form-group">
              <label for="inputEmail">Name</label>
              <%= f.text_field :name ,:class=>"form-control"%>
            </div>
            <div class="form-group">
              <label for="inputEmail">Email</label>
              <%= f.text_field :email ,:class=>"form-control"%>
            </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <label for="inputEmail">Contact No 1</label>
            <%= f.text_field :contact1 ,:class=>"form-control"%>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <label for="inputEmail">Contact No 2</label>
            <%= f.text_field :contact2 ,:class=>"form-control"%>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <label for="inputEmail">No of tables</label>
            <%= f.text_field :no_of_tables ,:class=>"form-control"%>
          </div>
        </div>
        <div class="col-md-12">
          <div class="form-group">
            <label for="inputEmail">Default Image</label>
            <%= f.file_field :image ,:class=>"form-control"%>
          </div>
        </div>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">Other</div>
      <div class="panel-body">
        <div class="col-md-12">
          <div class="form-group">
            <label for="inputEmail">Description</label>
            <%= f.text_area :description ,:class=>"form-control"%>
          </div>
          <div class="form-group">
            <label for="inputEmail">Feature Of R</label>
            <%= f.text_area :feature_list ,:class=>"form-control"%>
          </div>
        </div>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">Address</div>
      <div class="panel-body">
        <div class="col-md-12">
            <div class="form-group">
              <label for="inputEmail">Address 1</label>
              <%= f.text_field :address1 ,:class=>"form-control"%>
            </div>
            <div class="form-group">
              <label for="inputEmail">Address 2</label>
              <%= f.text_field :address2 ,:class=>"form-control"%>
            </div>
        </div>
        <div class="col-md-3">
          <div class="form-group">
            <label for="inputEmail">Country</label>
            <%= f.text_field :country ,:class=>"form-control"%>
          </div>
        </div>
        <div class="col-md-3">
          <div class="form-group">
            <label for="inputEmail">State</label>
            <%= f.text_field :state ,:class=>"form-control"%>
          </div>
        </div>
        <div class="col-md-3">
          <div class="form-group">
            <label for="inputEmail">City</label>
            <%= f.text_field :city ,:class=>"form-control"%>
          </div>
        </div>
        <div class="col-md-3">
          <div class="form-group">
            <label for="inputEmail">Zip Code</label>
            <%= f.text_field :zip_code ,:class=>"form-control"%>
          </div>
        </div>
      </div>
    </div>
  <div class="actions">
    <input type="submit" class="btn btn-primary">
    <%= link_to 'Back', restaurants_path ,:class=>"btn btn-default"%>
  </div>
<% end %>
